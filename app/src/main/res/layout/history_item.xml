<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#cfa"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:padding="10dp"
    app:cardElevation="4pt">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/history_doaTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/TextView"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="4pt"
            android:text="Date of Appointment : "/>

        <TextView
            android:id="@+id/history_doa"
            android:layout_width="wrap_content"
            style="@style/TextView"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/history_doaTv"
            android:text="25/9/2019"
            android:fontFamily="sans-serif-condensed-light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:layout_below="@+id/history_doaTv"
            android:drawablePadding="4pt"
            android:layout_marginLeft="4pt"
            style="@style/TextView"
            android:layout_marginTop="2pt"
            android:fontFamily="sans-serif-condensed-light"
            android:text="7-9 AM"
            android:id="@+id/history_timeSlot"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="20pt"
            android:drawableLeft="@drawable/ic_file_download_black_24dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/history_timeSlot"
            android:drawablePadding="4pt"
            android:layout_marginLeft="4pt"
            android:layout_marginTop="4pt"
            android:text="Download Report"
            style="@style/Button"
            android:textSize="5pt"
            android:id="@+id/history_download"/>




    </RelativeLayout>

</androidx.cardview.widget.CardView>