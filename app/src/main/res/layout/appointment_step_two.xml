<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APPOINTMENT DETAILS"
                android:id="@+id/info"
                android:textSize="25sp"
                android:textColor="@color/red"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="10dp"
                android:textAllCaps="true"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info"
                android:layout_marginTop="40dp"
                android:id="@+id/coopercard"
                app:cardElevation="5dp"
                app:cardCornerRadius="7dp">
                <TextView
                    android:text="Cooper Hospital"
                    android:fontFamily="@font/montserrat"
                    android:layout_toRightOf="@+id/img"
                    android:textSize="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv1"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/img"
                    android:src="@drawable/drop"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv1"
                    android:layout_marginTop="40dp"
                    android:text="B Swami Marg, Juhu, Vile Parle West, Mumbai"
                    android:textSize="15dp"
                    android:layout_marginLeft="45dp"
                    android:fontFamily="@font/montserrat"/>


            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/calendar"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/coopercard"
                android:id="@+id/calendar"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:textSize="19sp"
                android:fontFamily="@font/montserrat"
                android:layout_toRightOf="@+id/calendar"
                android:layout_marginLeft="5dp"
                android:textColor="@color/red"
                android:text="Morning, 8 AM to 11 AM on 24/10/2019"
                android:layout_below="@+id/coopercard"
                android:layout_marginTop="60dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="340dp"
        android:src="@drawable/maps"
        app:backgroundTint="#D32F2F" />




</RelativeLayout>
