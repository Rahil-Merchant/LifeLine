<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:backgroundTint="#F9FAFC"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="APPOINTMENT DETAILS"
        android:id="@+id/info"
        android:textSize="15dp"
        android:textColor="@color/red"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="35dp"
        android:textAllCaps="true"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:id="@+id/cv1"
        android:layout_below="@+id/info"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/calendartick"
                android:layout_marginTop="4dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/calendartick"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fri Apr 03"
                android:layout_below="@id/calendartick"
                android:fontFamily="@font/montserrat"
                android:textSize="15dp"
                android:gravity="center_horizontal"
                android:id="@+id/tv1"
                android:padding="6dp"
                android:layout_marginTop="3dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Morning, 8 AM to 11 AM"
                android:textSize="15dp"
                android:fontFamily="@font/montserrat"
                android:layout_below="@id/tv1"
                android:padding="2dp"
                android:layout_marginBottom="3dp"
                android:id="@+id/tv2"
                android:gravity="center_horizontal"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        android:elevation="3dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/venue"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:id="@+id/venue"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cooper Hospital"
                android:layout_below="@id/venue"
                android:fontFamily="@font/montserrat"
                android:textSize="15dp"
                android:gravity="center_horizontal"
                android:id="@+id/tv3"
                android:padding="6dp"
                android:layout_marginTop="3dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B Swami Marg, Juhu, Vile Parle West, Mumbai"
                android:textSize="15dp"
                android:fontFamily="@font/montserrat"
                android:layout_below="@id/tv3"
                android:padding="2dp"
                android:layout_marginBottom="3dp"
                android:gravity="center_horizontal"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:src="@drawable/maps"
            android:layout_gravity="bottom|center"
            app:backgroundTint="#D32F2F" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>




</RelativeLayout>
