<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#eee"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:padding="8dp"
    app:cardElevation="3pt">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/redeem_name"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="Rahil Merchant" />

        <TextView
            android:id="@+id/redeem_emailTv"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/redeem_name"
            android:text="Email ID : "
            android:layout_marginTop="5dp"
            android:layout_marginRight="7dp" />

        <TextView
            android:id="@+id/redeem_email"
            android:layout_marginTop="5dp"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/redeem_name"
            android:layout_toEndOf="@id/redeem_emailTv"
            android:fontFamily="sans-serif-condensed-light"
            android:text="rahilmerchant99@gmail.com" />

        <TextView
            android:id="@+id/redeem_mobile"
            android:layout_width="wrap_content"
            style="@style/TextView"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/redeem_emailTv"
            android:fontFamily="sans-serif-condensed-light"
            android:drawableStart="@drawable/ic_call_black_24dp"
            android:drawablePadding="5dp"
            android:text="823645789"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            style="@style/TextView"
            android:layout_below="@id/redeem_mobile"
            android:text="Pending Rewards : "
            android:id="@+id/redeem_rewards_countTv"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            style="@style/TextView"
            android:layout_below="@id/redeem_mobile"
            android:layout_toEndOf="@id/redeem_rewards_countTv"
            android:text="1"
            android:fontFamily="sans-serif-condensed-light"
            android:id="@+id/redeem_rewards_count"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            style="@style/TextView"
            android:layout_below="@id/redeem_rewards_countTv"
            android:text="Times Donated : "
            android:id="@+id/redeem_rewards_timesDonatedTv"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            style="@style/TextView"
            android:layout_below="@id/redeem_rewards_countTv"
            android:layout_toEndOf="@id/redeem_rewards_timesDonatedTv"
            android:text="6"
            android:fontFamily="sans-serif-condensed-light"
            android:id="@+id/redeem_rewards_timesDonated"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>